		</dependency>
		<dependency>
			<groupId>javax.activation</groupId>
			<artifactId>activation</artifactId>
			<version>1.1.1</version>
		</dependency>
		<dependency>
			<groupId>cglib</groupId>
			<artifactId>cglib</artifactId>
			<version>2.2.2</version>
		</dependency>
		<dependency>
			<groupId>com.itextpdf</groupId>
			<artifactId>itextpdf</artifactId>
			<version>5.5.8</version>
		</dependency>

		<!-- WEB SERVER -->
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>javax.servlet-api</artifactId>
			<version>3.0.1</version>
			<scope>provided</scope>
		</dependency>

		<!-- DBUnit -->
		<!--dependency> <groupId>org.dbunit</groupId> <artifactId>dbunit</artifactId> 
			<version>2.5.4-SNAPSHOT</version> </dependency -->

		<!-- Local -->
		<dependency>
			<groupId>sqljdbc</groupId>
			<artifactId>sqljdbc4</artifactId>
			<version>4.0</version>
		</dependency>
		<dependency>
			<groupId>pt.novabase.paperless</groupId>
			<artifactId>LoginAudit</artifactId>
			<version>1.1.0</version>
		</dependency>
		<dependency>
			<groupId>org.apache.pdfbox</groupId>
			<artifactId>pdfbox</artifactId>
			<version>2.0.1</version>
		</dependency>
	</dependencies>


	<repositories>
		<repository>
			<id>my-local-repo</id>
			<url>file://${basedir}/lib/repo</url>
		</repository>
	</repositories>

	<organization>
		<name>Novabase</name>
	</organization>
</project>